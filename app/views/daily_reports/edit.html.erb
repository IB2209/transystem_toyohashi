<div class="backcolor_schedule">
  <div class="forphone">
    <div class="header">
      <div class="headerbox">
        <h1>- 日報編集 -</h1>
        <p>不明点等ございましたらご連絡ください。</p>
        <p style="color: red; border-top: 1px solid lightgray;">※ 必須の質問です</p>
      </div>
    </div>

    <%= form_with model: @daily_report, url: daily_report_path(@daily_report), method: :patch, local: true do |form| %>
      <div class="q">
        <label>日付</label><br>
        <%= form.date_field :move_date, value: @daily_report.move_date %>
      </div>

      <div class="q">
        <label>出社</label><br>
        <%= form.time_field :start_time, value: @daily_report.start_time %>
      </div>

      <div class="q">
        <label>退社</label><br>
        <%= form.time_field :end_time, value: @daily_report.end_time %>
      </div>

      <div class="q">
        <label>業務内容</label><br>
        <%= form.text_field :work_content, value: @daily_report.work_content %>
      </div>

      <div class="q">
        <label>備考</label><br>
        <%= form.text_area :remarks, placeholder: "備考欄", rows: 3, value: @daily_report.remarks %>
      </div>

      <div class="bottombtn">
        <%= link_to "戻る", daily_reports_path, class: "back_btn" %>
        <%= form.submit "更新", class: "submit_btn" %>
      </div>
    <% end %>
  </div>
</div>
